@using ShoppingList.Models;
@model List<productCategory>
@{
    ViewData["Title"] = "CategoryAddPage";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8">
    <link href="~/templates/list/style.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">


</head>
<body>
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            alert('@Html.Raw(TempData["ErrorMessage"])');
        </script>
    }
    <div class="text-center">
        <h1 class="display-4">Kategori Ekleme</h1>
    </div>
    

    <div class="d-flex justify-content-center mt-5">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">Yeni Kategori</button>
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Ürün Ekle</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <div class="modal-body">
                            <form class="form-group" method="post">

                                <label class="form-label required">Ürün Kategorisi</label>
                                <input type="text" name="category" class="form-control" required />
                                <br />
                                <button class="btn btn-info">Kaydet</button>
                            </form>
                        </div>

                    </div>
                    <div class="modal-footer">

                        <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">İptal Et</button>
                    </div>
                </div>
            </div>
        </div>
    </div>



    <div class="wrap-all-the-things">
        <div class="card-body" id="out-of-title1">


            <table class="table table-striped">
                <thead>
                <th></th>
                <th>Kategori Id</th>
                <th>Kategori Adı</th>
                <th>Güncelle</th>



                </thead>
                <tbody>
                    @foreach (var Category in Model)
                    {

                        <tr>
                            <td>
                                <a href="/Admin/CategoryDelete/@(Category.CategoryId)" class="btn btn-outline-danger ">X</a>

                            </td>
                            <td>@(Category.CategoryId)</td>
                            <td>@(Category.CategoryName)</td>
                            <td><a href="#" class="btn btn-info" data-bs-toggle="modal" data-bs-target="#myModal-@(Category.CategoryId)">Güncelle</a></td>


                        </tr>

                        <!-- Modal -->
                        <div class="modal fade" id="myModal-@(Category.CategoryId)">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title">Kategori Bilgileri</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                    </div>
                                    <div class="modal-body">
                                        <div class="modal-body">
                                            <form class="form-group" method="post" action="/Admin/CategoryUpdate/@(Category.CategoryId)">

                                                <label class="form-label required">Kategori Adı</label>
                                                <input type="text" name="UpdateCategory" class="form-control" value="@(Category.CategoryName)" required />
                                                <br />
                                                <br />
                                                <button type="submit" class="btn btn-info">Güncelle</button>

                                            </form>
                                        </div>

                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">İptal Et</button>
                                    </div>
                                </div>
                            </div>
                        </div>

                    }
                </tbody>
            </table>





        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="~/templates/list/script.js"></script>
</body>

</html>