@using ShoppingList.Models;
@model List<list>



@{
    ViewData["Title"] = "Home Page";

}


<!DOCTYPE html>
<html lang="tr">
<head>
    <link href="~/templates/list/Style.css" type="text/css" rel="stylesheet" />
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.1.0/css/all.css" integrity="sha384-lKuwvrZot6UHsBSfcMvOkWwlCMgc0TaWr+30HWe3a4ltaBwTZhyTEggF5tJv8tbt" crossorigin="anonymous">

</head>
<body>
    @if (TempData["ErrorMessage"] != null)
    {
        <script>
            alert('@Html.Raw(TempData["ErrorMessage"])');
        </script>
    }
    <div class="text-center">
        <h1 class="display-4">Alışveriş Listesi</h1>
    </div>


    <div class="d-flex justify-content-center mt-5">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">Yeni Liste</button>
        <div class="modal" id="myModal">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Liste Ekle</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <form class="form-group" method="post">
                            <label class="form-label required">Yeni liste adı</label>
                            <input type="text" name="listName" class="form-control" required />
                            <br />
                            <button class="btn btn-info">Kaydet</button>
                        </form>
                    </div>
                    <div class="modal-footer">

                        <button type="submit" class="btn btn-danger" data-bs-dismiss="modal">İptal Et</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
  

    <div class="wrap-all-the-things">
        <div class="card-body" id="out-of-title1">

            <table class="table table-striped">
                <thead>
                <th></th>
                <th>Liste Adı</th>
                <th>Detaylar</th>


                </thead>
                <tbody>
                    @foreach (var listDetail in Model)
                    {

                        <tr>
                            <td><a href="/Home/ListDelete/@(listDetail.listId)" class="btn btn-outline-danger">X</a></td>
                            <td>@(listDetail.listName)</td>
                            <td><a href="@Url.Action("ProductPage", "Product", new { listId =  @listDetail.listId})" class="btn btn-info">Detaylar</a></td>


                        </tr>
                    }
                </tbody>
            </table>



        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>

</body>

</html>
